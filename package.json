{
  "name": "@spader/node-whisper-cpp",
  "version": "0.2.2",
  "type": "module",
  "packageManager": "bun@1.3.9",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "imports": {
    "#tools/build": "./tools/build.ts"
  },
  "files": [
    "dist/",
    "packages/platform/arm64-darwin-metal/",
    "packages/platform/arm64-darwin-cpu/",
    "packages/platform/x64-linux-cpu-gnu/",
    "packages/platform/x64-linux-cuda-gnu/",
    "package.json"
  ],
  "scripts": {
    "build": "bun run ./tools/build.ts all",
    "smoke": "NODE_WHISPER_CPP_BACKEND=cpu bun run ./tools/build.ts all && bun run test",
    "smoke:cpu": "NODE_WHISPER_CPP_BACKEND=cpu bun run ./tools/build.ts all --ci && bun run test",
    "test": "bun test ./test/smoke.test.ts",
    "clean": "bun run ./tools/clean.ts"
  },
  "optionalDependencies": {
    "@spader/node-whisper-cpp-arm64-darwin-metal": "0.2.2",
    "@spader/node-whisper-cpp-arm64-darwin-cpu": "0.2.2",
    "@spader/node-whisper-cpp-x64-linux-cpu-gnu": "0.2.2",
    "@spader/node-whisper-cpp-x64-linux-cuda-gnu": "0.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tspader/node-whisper-cpp"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "node-addon-api": "^8.3.1"
  },
  "devDependencies": {
    "@clack/prompts": "^1.0.0",
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.0",
    "@types/yargs": "^17.0.35",
    "cmake-js": "^7.3.0",
    "typescript": "^5.9.3",
    "yargs": "^18.0.0"
  }
}
